          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{base_url}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"CustA\",\n  \"email\": \"custa@example.com\",\n  \"phone\": \"0551000001\",\n  \"password\": \"12345678\",\n  \"role\": \"customer\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/auth/login",
